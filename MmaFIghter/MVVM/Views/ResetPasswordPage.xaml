<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MmaFIghter.MVVM.Views.ResetPasswordPage"
             Title="Reset Password">

    <StackLayout Padding="20" VerticalOptions="CenterAndExpand">
        <Entry x:Name="UsernameEntry" Placeholder="Username" />
        <Entry x:Name="NewPasswordEntry" Placeholder="New Password" IsPassword="True" />
        <Button Text="Reset Password" Clicked="OnResetPasswordButtonClicked" />
        <Button Text="Back to Login" Clicked="OnBackToLoginButtonClicked" />
    </StackLayout>

</ContentPage>
