<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MmaFIghter.MVVM.ViewModels"
             x:Class="MmaFIghter.MVVM.Views.LoginPage">

    <StackLayout Padding="5" VerticalOptions="StartAndExpand">

        <Image Source="ufcfighter.png" WidthRequest="900" Margin="0,-40,0,0"/>

        <Entry x:Name="UsernameEntry" Placeholder="Username" Text="{Binding Username}" />
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" Text="{Binding Password}" />

        <Button Text="Login" Clicked="OnLoginButtonClicked" Margin="5"/>
        <Button Text="Don't have an account? Sign Up!" Clicked="OnSignupButtonClicked" Margin="10"/>
    </StackLayout>
</ContentPage>