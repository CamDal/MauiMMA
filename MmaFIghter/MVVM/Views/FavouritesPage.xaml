<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MmaFIghter.MVVM.Views.FavouritesPage"
             xmlns:ViewModel="clr-namespace:MmaFIghter.MVVM.ViewModels"
             xmlns:local="clr-namespace:MmaFIghter.MVVM.Views">

    <StackLayout>
        <ListView x:Name="FavouritesListView" ItemsSource="{Binding FavouriteFighters}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Label>
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="{Binding first_name}" />
                                        <Span Text=" " />
                                        <Span Text="{Binding last_name}" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>

</ContentPage>
